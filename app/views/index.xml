<Alloy>

	<!-- For supported environments (see alloy.js) -->
	<TabGroup>
		<Tab id="samplesTab" title="Samples">
			<Window title="Samples">
				<ListView onItemclick="onListViewItemclick">
					<ListSection>
						<ListItem itemId="personicon" title="Contact Application Shortcut Icon" />
						<ListItem itemId="touch" title="Force Touch &amp; Apple Pencil" />
						<ListItem itemId="streetview" title="Google Maps StreetView" />
						<ListItem itemId="keyboard" title="Keyboard (type, appearance and returnKeyType)" />
						<ListItem itemId="livephoto" title="Live Photo" />
						<ListItem itemId="menupopup" title="MenuPopup" />
						<ListItem itemId="popover" title="Popover (backgroundColor)" />
						<ListItem itemId="progressbar" title="Progress Bar (trackTintColor)" />
						<ListItem itemId="scrollview" title="ScrollView (scroll.contentSize)" />
						<ListItem itemId="tab" title="Tab (events and tabInsets)" />
						<ListItem itemId="window" title="Window (swipeToClose)" />
					</ListSection>
				</ListView>
			</Window>
		</Tab>
		<Require src="tab" />
		<Tab id="consoleTab" title="Console">
			<Require src="console" />
		</Tab>
	</TabGroup>

	<!-- For unsupported environments -->
	<Window if="!Alloy.Globals.isSupported">
		<Label>This sample requires Titanium 5.2.</Label>
	</Window>

</Alloy>
